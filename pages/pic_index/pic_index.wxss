button {
    width: 600rpx;
    margin-bottom: 30rpx;
}

.first-btn {
    margin-bottom: 100rpx;
    margin-top: 200rpx;
}

.mask {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
}

.dialog {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 588rpx;
    margin: auto;
    height: fit-content;
    border-radius: 10rpx;
    background-color: #fff;
}

.dialog-t {
    height: 94rpx;
    padding-left: 20rpx;
    padding-top: 30rpx;
    line-height: 94rpx;
    color: #3B3E46;
    font-weight: 600;
    text-align: center;
    font-size: 30rpx;
}

.dialog-b {
    display: flex;
    height: 100rpx;
    border-top: 2rpx solid #D5D5D5;
    line-height: 100rpx;
}

.btn {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}

.line-btn {
    position: relative;
}

.line-btn::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    display: block;
    width: 0;
    height: 99rpx;
    border-left: 2rpx solid #D5D5D5;
}

.cancel {
    color: #3B3E46;
}

.btn-submit {
    color: #0FCD8B;
    background-color: #fff;
}

.dialog-c {
    min-height: 200rpx;
    padding: 28rpx 30rpx 10rpx 30rpx;
    box-sizing: border-box;
}

.dialog-c view {
    line-height: 42rpx;
    color: #666;
}

.t-center {
    text-align: center;
}

.dialog-c input {
    height: 80rpx;
    margin-top: 20rpx;
    line-height: 80rpx;
    border: 2rpx solid #ccc;
    border-radius: 8rpx;
    font-size: 30rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}