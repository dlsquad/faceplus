.name-input {
    height: 80rpx;
    margin-top: 20rpx;
    line-height: 80rpx;
    border: 2rpx solid #ccc;
    border-radius: 8rpx;
    font-size: 30rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.show-img {
    position: relative;
    margin-top: 30rpx;
